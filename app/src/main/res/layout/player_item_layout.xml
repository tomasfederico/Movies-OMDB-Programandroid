<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/player_item_height"
    android:layout_marginHorizontal="@dimen/player_item_cell_margin"
    android:layout_marginTop="@dimen/player_item_cell_margin"
    android:background="#03A9F4"
    android:padding="@dimen/padding_item">

    <ImageView
        android:id="@+id/movie_image_id"
        android:layout_width="@dimen/player_image_size"
        android:layout_height="@dimen/player_image_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/black" />

    <TextView
        android:id="@+id/movie_title_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/movie_image_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Messi" />

</androidx.constraintlayout.widget.ConstraintLayout>